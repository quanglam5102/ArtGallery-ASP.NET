<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Art Gallery</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        /* Layout for sticky footer */
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            margin: 0;
            min-height: 100vh;
        }

        main {
            flex: 1; /* Ensures the main content area takes up the remaining space */
        }

        /* Footer styling */
        .footer {
            background-color: #343a40;
            color: white;
            padding: 5px 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="~/images/nature.jpg" alt="Art Gallery Logo" class="mr-2" style="width: 80px; height: auto;" />
                    <span>Art Gallery</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Art">Artworks</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Artist">Artists</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Exhibition">Exhibitions</a></li>
                        <li class="nav-item"><a class="nav-link" href="/User/Signup">SignUp</a></li>
                        <li class="nav-item"><a class="nav-link" href="/User/Signin">SignIn</a></li>
                        <li class="nav-item"><a class="nav-link" href="/User/Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="footer mt-auto">
        <div class="container text-center">
            &copy; 2024 ArtGallery | <a href="#" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
